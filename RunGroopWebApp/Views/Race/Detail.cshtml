<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="=" my-4">
        @Model.Title (@Model.RaceCategory)
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ImageURL" alt="" />
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Details</h3>
            <p>@Model.Description</p>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Race Location</h5>
                    <p class="card-text">@Model.Address.Street</p>
                    <p class="card-text">@Model.Address.City</p>
                    <p class="card-text">@Model.Address.County</p>
                    <p class="card-text">@Model.Address.Postcode</p>
                </div>
            </div>
        </div>
    </div>

    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="" />
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="" />
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="" />
            </a>
        </div>


    </div>
    <!-- /.row -->
</div>
<!-- /.container -->