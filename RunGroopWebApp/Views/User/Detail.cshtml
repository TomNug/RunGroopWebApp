@{
}

@model UserDetailViewModel

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">@Model.UserName
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ProfilePictureUrl" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Running Stats</h3>
            <p>Mileage: @Model.Mileage</p>
            <p>Pace: @Model.Pace</p>
            @if (Model.City != null && Model.County != null)
            {
                <h3 class="my-3">Location</h3>
                <p>@Model.City, @Model.County</p>
            }
            
        </div>
    </div>

    <!-- /.row -->

    <!-- Related Users Row -->
    @if (Model.RelatedUsers.Any())
    {
        <!-- Related Races Row -->
        <h3 class="my-4">Related races in @Model.City</h3>
        <div class="row">
            @foreach (var item in Model.RelatedUsers)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-img-top-container">
                            <img class="card-img-top" src="@item.ProfileImageUrl" width="100%" height="225" alt="Card image cap" style="object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <p class="card-text">@item.UserName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-muted">@item.Address.City</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <!-- /.row -->
</div>
<!-- /.container -->