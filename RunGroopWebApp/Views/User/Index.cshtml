@model List<UserViewModel>
@{
}
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">

            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-img-top-container">
                            <img class="card-img-top" alt="Image profile avatar" src="@item.ProfilePictureUrl" class="avatar" width="100%" height="225" alt="Card image cap" style="object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.UserName</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Mileage: @item.Mileage</li>
                                <li class="list-group-item">Pace: @item.Pace</li>
                                <li class="list-group-item">City: @item.City</li>
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between aligh-items-center">
                                        <div class="btn-group">
                                            <a type="btn btn-success" asp-controler="User" asp-action="Detail" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary">View</a>
                                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                            {
                                                <a asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                                <a asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                            }
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            
                         </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
